<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <bean id="dev" class="org.example.Developer">
        <property name="age" value="12"/>
        <property name="laptop" ref="lap1"/>
    </bean>
    <bean id="dev1" class="org.example.Developer">
<!--        <constructor-arg name="age" value="14"/>-->
        <constructor-arg index="0" value="17"/>
        <constructor-arg index="1" ref="lap1"/>
    </bean>

    <bean id="lap1" class="org.example.Laptop"/>

</beans>